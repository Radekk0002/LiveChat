
<div class="@(User=="You"?"text-right":"") pt-2 pl-3 pr-3 mw-100">
    <div class="d-inline-block" title="@Date">
        <p class="@(User == "You" ? "text-right pr-1":"pl-1") mb-0">@User</p>
        <p class="@(User=="You"?"bg-primary":"bg-light text-dark") text-left m-0 pt-2 pb-2 pl-3 pr-3">@Msg</p>
    </div>
</div>




@code {

    [Parameter]
    public string Msg { get; set; } = "Message";

    [Parameter]
    public string User { get; set; } = "You";

    [Parameter]
    public DateTime Date { get; set; } = DateTime.Now;

}
